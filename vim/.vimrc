source $VIMRUNTIME/defaults.vim

set ruler

set showcmd

set wildmenu

set incsearch

set colorcolumn:80

set cursorline

syntax on

set background=dark

set tabstop=4 softtabstop=0 expandtab shiftwidth=2 smarttab

set number

set viminfo^=%

set nohls

set listchars=eol:¬,space:·

set list

set belloff=all
